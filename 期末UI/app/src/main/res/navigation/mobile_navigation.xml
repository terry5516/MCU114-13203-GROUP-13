    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.ui.fragment.HomeFragment"
        android:label="首頁"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.example.ui.fragment.ScheduleFragment"
        android:label="行程"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/navigation_todo"
        android:name="com.example.ui.fragment.TodoFragment"
        android:label="待辦"
        tools:layout="@layout/fragment_todo" />

    <fragment
        android:id="@+id/navigation_feedback"
        android:name="com.example.ui.fragment.FeedbackFragment"
        android:label="反饋"
        tools:layout="@layout/fragment_feedback" />
